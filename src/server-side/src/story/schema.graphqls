type Story implements NamedEntity {
    id: ID!
    createdAt: String!
    title: String!
    description: String
    content: String!
    author: User!
}

input CreateStoryContent {
    title: String!
    description: String
    content: String!
    authorId: Int!
}

input UpdateStoryContent {
    title: String!
    description: String
    content: String!
}
